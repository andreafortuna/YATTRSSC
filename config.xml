<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns = "http://www.w3.org/ns/widgets"
    xmlns:gap = "http://phonegap.com/ns/1.0"
    id        = "org.andreafortuna.yattrssc"
    version   = "0.0.2">

    
<name>YATTRSSC</name>

<description>
Yet Another Tiny Tiny RSS Client
</description>

<author href="https://www.andreafortuna.org" email="andy@andreafortuna.org">
Andrea Fortuna
</author>

<preference name="stay-in-webview" value="false" /> 
<access origin="*" />
    
<icon src="icon.png" />
    
<preference name="target-device" value="universal" /> 

<icon src="icon.png" /> 
    

<icon src="icons/ios/icon.png" width="57" height="57" />
<icon src="icons/ios/icon-72.png" width="72" height="72" gap:platform="ios"/>
<icon src="icons/ios/Icon@2x" width="114" height="114" />
<icon src="icons/ios/icon-72@2x.png" width="144" height="144" gap:platform="ios" />

    
    
<icon src="icons/android/Icon.png" gap:platform="android" gap:density="ldpi" />
<icon src="icons/android/Icon.png" gap:platform="android" gap:density="mdpi" />
<icon src="icons/android/Icon.png" gap:platform="android" gap:density="hdpi" />
<icon src="icons/android/Icon.png" gap:platform="android" gap:density="xhdpi" />

<icon src="icons/bb/icon.png" gap:platform="blackberry" />
        
        
        
<gap:splash src="splash.png" />        
<gap:splash src="splash/ios/Default.png"  width="320" height="480" />
<gap:splash src="splash/ios/Default2x.png" width="640" height="960" />
<gap:splash src="splash/ios/DefaultLandscape.png" width="1024" height="768" />
<gap:splash src="splash/ios/DefaultPortrait.png"  width="768" height="1024" />        

        
<gap:splash src="splash/android/splash.png" gap:platform="android" gap:density="ldpi" />
<gap:splash src="splash/android/splash.png" gap:platform="android" gap:density="mdpi" />
<gap:splash src="splash/android/splash.png" gap:platform="android" gap:density="hdpi" />
<gap:splash src="splash/android/splash.png" gap:platform="android" gap:density="xhdpi" />    
    
</widget>
